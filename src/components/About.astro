---
const skills = [
	{
		name: 'HTML',
		url: 'https://developer.mozilla.org/en-US/docs/Web/HTML',
		category: 'Frontend',
	},
	{ name: 'CSS', url: 'https://developer.mozilla.org/en-US/docs/Web/CSS', category: 'Frontend' },
	{
		name: 'JavaScript',
		url: 'https://developer.mozilla.org/en-US/docs/Web/JavaScript',
		category: 'Frontend',
	},
	{ name: 'TypeScript', url: 'https://www.typescriptlang.org/', category: 'Frontend' },
	{ name: 'Angular', url: 'https://angular.io/', category: 'Frontend' },
	{ name: 'React', url: 'https://react.dev/', category: 'Frontend' },
	{ name: 'Astro', url: 'https://astro.build/', category: 'Frontend' },
	{ name: 'Tailwind CSS', url: 'https://tailwindcss.com/', category: 'Frontend' },
	{ name: 'Node.js', url: 'https://nodejs.org/', category: 'Backend' },
	{ name: 'Deno', url: 'https://deno.com/', category: 'Backend' },
	{ name: '.NET', url: 'https://dotnet.microsoft.com/', category: 'Backend' },
	{ name: 'Git', url: 'https://git-scm.com/', category: 'DevOps' },
	{ name: 'GitHub', url: 'https://github.com/', category: 'DevOps' },
	{ name: 'GitLab', url: 'https://gitlab.com/', category: 'DevOps' },
	{ name: 'SQL', url: 'https://en.wikipedia.org/wiki/SQL', category: 'Database' },
	{ name: 'MongoDB', url: 'https://www.mongodb.com/', category: 'Database' },
	{ name: 'REST APIs', url: 'https://restfulapi.net/', category: 'Backend' },
	{ name: 'Kotlin', url: 'https://kotlinlang.org/', category: 'Mobile' },
	{ name: 'Android', url: 'https://developer.android.com/', category: 'Mobile' },
	{
		name: 'Jetpack Compose',
		url: 'https://developer.android.com/jetpack/compose',
		category: 'Mobile',
	},
	{ name: 'Docker', url: 'https://www.docker.com/', category: 'DevOps' },
];

const skillCategories = ['Frontend', 'Backend', 'Database', 'Mobile', 'DevOps'];
---

<section data-testid="about" id="about" class="min-h-screen px-4 py-16 lg:px-8">
	<div class="mx-auto max-w-6xl">
		<!-- Header -->
		<div class="mb-16 text-center">
			<h2 class="mb-4 font-monospace text-3xl text-orange lg:text-5xl">About me</h2>
			<span class="mx-auto block h-1 w-16 bg-orange"></span>
		</div>

		<!-- Main Content Grid -->
		<div class="grid items-start gap-12 lg:grid-cols-2">
			<!-- Left Column - Personal Info -->
			<div class="space-y-8">
				<!-- Introduction Card -->
				<div
					class="rounded-xl bg-white p-6 shadow-lg transition-shadow duration-300 hover:shadow-xl dark:bg-gray-900"
				>
					<h3 class="mb-4 font-monospace text-xl text-orange lg:text-2xl">ðŸ‘‹ Hello!</h3>
					<p class="leading-relaxed text-gray-700 dark:text-gray-300">
						I'm a young, enthusiastic web developer with a passion for technology and
						continuous learning. I love exploring new solutions and expanding my
						professional knowledge.
					</p>
				</div>

				<!-- What I Do Card -->
				<div
					class="rounded-xl bg-white p-6 shadow-lg transition-shadow duration-300 hover:shadow-xl dark:bg-gray-900"
				>
					<h3 class="mb-4 font-monospace text-xl text-orange lg:text-2xl">
						ðŸš€ What I Do
					</h3>
					<p class="mb-4 leading-relaxed text-gray-700 dark:text-gray-300">
						With a creative mindset and problem-solving approach, I work on projects
						that bring ideas to life. I'm highly communicative, love working in teams,
						and welcome challenges with enthusiasm.
					</p>
					<div class="flex flex-wrap gap-2">
						<span class="rounded-full bg-orange/10 px-3 py-1 text-sm text-orange"
							>Full Stack Development</span
						>
						<span class="rounded-full bg-orange/10 px-3 py-1 text-sm text-orange"
							>Web Applications</span
						>
						<span class="rounded-full bg-orange/10 px-3 py-1 text-sm text-orange"
							>Mobile Development</span
						>
					</div>
				</div>
			</div>

			<!-- Right Column - Skills -->
			<div class="space-y-8">
				<!-- Skills Header -->
				<div class="rounded-xl bg-white p-6 shadow-lg dark:bg-gray-900">
					<h3 class="mb-6 font-monospace text-xl text-orange lg:text-2xl">
						ðŸ’» Tech Stack
					</h3>

					<!-- Skills by Category -->
					<div class="space-y-6">
						{
							skillCategories.map((category) => (
								<div>
									<h4 class="mb-3 flex items-center text-lg font-semibold text-gray-900 dark:text-white">
										<span class="mr-2 h-2 w-2 rounded-full bg-orange" />
										{category}
									</h4>
									<div class="flex flex-wrap gap-2">
										{skills
											.filter((skill) => skill.category === category)
											.map((skill) => (
												<a
													href={skill.url}
													target="_blank"
													rel="noopener noreferrer"
													class="group inline-flex items-center rounded-lg bg-gray-100 px-3 py-2 text-sm font-medium text-gray-700 transition-all duration-200 hover:scale-105 hover:bg-orange hover:text-white hover:shadow-md dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-orange"
												>
													<span>{skill.name}</span>
													<svg
														class="ml-1 h-3 w-3 opacity-0 transition-opacity group-hover:opacity-100"
														fill="none"
														stroke="currentColor"
														viewBox="0 0 24 24"
													>
														<path
															stroke-linecap="round"
															stroke-linejoin="round"
															stroke-width="2"
															d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
														/>
													</svg>
												</a>
											))}
									</div>
								</div>
							))
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
