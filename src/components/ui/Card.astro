---
import { Image } from 'astro:assets';
import Tags from './Tags.astro';

interface Props {
	url?: string;
	alt?: string;
	img_url: string;
	title?: string;
	tags: string[];
	children?: HTMLElement | HTMLElement[];
}

const {
	url = '#',
	img_url = undefined,
	alt = 'Project image',
	title = 'Project title',
	tags = ['Tags'],
} = Astro.props;
---

<section class="w-full p-4 md:w-1/2 lg:w-1/3">
	<article
		data-testId="card"
		class="rounded-xl bg-white p-3 shadow-lg duration-100 hover:scale-105 hover:transform hover:shadow-xl"
	>
		<a href={url} target="_blank" aria-label="link to project">
			<div class="relative flex items-end overflow-hidden rounded-xl">
				<Image
					src={img_url}
					alt={alt}
					format="png"
					width={320}
					height={256}
					loading="eager"
                    class="w-full h-64 object-contain"
				/>
			</div>
			<div class="mt-1 p-2">
				<h3 class="text-xl text-orange lg:text-2xl">{title}</h3>
				<Tags tags={tags} />
			</div>
		</a>
	</article>
</section>
